<?xml version="1.0" encoding="UTF-8"?>
<customUI xmlns="http://schemas.microsoft.com/office/2009/07/customui" onLoad="Ribbon_Load">
  <ribbon>
    <tabs>
      <tab id="sharedFavs" label="Shared Favorites">
        <group id="sharedFavsShapes"
               label="Favorite Shapes">
          <button id="openSharedFavButton" label="Show Favorite Shapes"
             screentip="Favorite Shapes" onAction="OnOpenSharedFavButton"
             supertip="Opens the Shared FavoritesShapes Overview"/>
          <button id="importSharedFavButton" label="Import Favorite Shapes"
             screentip="Import Favorite Shapes" onAction="OnImportSharedFavButton"
             supertip="Imports Favorite Shapes"/>
          <button id="exportSharedFavButton" label="Export Favorite Shapes"
             screentip="Export Favorite Shapes" onAction="OnExportSharedFavButton"
             supertip="Exports Favorite Shapes" getVisible="IsAdmin"/>
          <button id="copyFromClipboardButton" label="Copy From Clipboard"
             screentip="Copy a shape from Clipboard" onAction="OnCopyFromClipboardButton" getVisible="IsAdmin"
             supertip="Copies the shape that is currently in your clipboard and imports it to your Favorite Shapes"/>
        <button id="infoButton" label="Info..."
             onAction="OnInfoButton"/>
        </group>
      </tab>
    </tabs>
  </ribbon>
  <contextMenus>
    <contextMenu idMso="ContextMenuShape">
      <menu id="ShapeFavoritesMenu" label="Favorite Shapes...">
        <button id="SaveFavoriteShapeContextButton" label="Save as Favorite Shape" insertBeforeMso="HyperlinkInsert" onAction="SaveFavoriteShape" getVisible="IsAdmin"/>
      </menu>
    </contextMenu>
  </contextMenus>
</customUI>

